<table border="1">

<% @services.each_with_index do |service, index| %>
<% if 0 == index %>
  <thead>
    <tr>
<% service.keys.each do |key| %>
      <th>
        <%= key.humanize %>
      </th>
<% end  %>
    </tr>
  </thead>
  <tbody>
<% end %>
    <tr>
<% service.keys.each do |key| %>
      <td>
        <%= truncate(service[key], :length => 50)  %>
      </td>
<% end %>
    </tr>
<% end %>
  </tbody>
</table>
